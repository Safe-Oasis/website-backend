        <!-- FontAwesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <link rel="stylesheet" href="/public/sass/style.css" />
        <script src="/public/scripts/login.js"></script>
    </head>
    <body class="noselect">
        <a href="<%= path === '/' ? 'javascript:void(0);' : '/' %>" class="home"><i class="fas fa-home fa-2x home-icon"></i></a>
        <header class="header">
            <section class="register-section">
                <div class="error">
                    <h3 class="error-title"><%= error?.title %></h3>
                    <p class="error-description"><%= error?.description %></p>
                </div>
                <form id="register-form" action="/register" method="post">
                    <input type="hidden" name="csrf_token" value="<%= csrf_token %>" />

                    <label for="username">Username</label>
                    <input type="text" , name="username" id="username" />
                    <label for="email">Email</label>
                    <input type="email" name="email" , id="email" />
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" />
                    <label for="password_confirm">Repeat Password</label>
                    <input type="password" name="password_confirm" id="password_confirm" />

                    <button type="submit">Create Account</button>
                </form>
            </section>
        </header>

        <footer class="footer">
            <section class="footer-left">
                <section class="footer-logo">
                    <a href="<%= path === '/' ? 'javascript:void(0);' : '/' %>">
                        <img src="/public/images/logo_512.png" alt="footer-logo" class="footer-logo-image" />
                    </a>
                </section>
                <section class="footer-nav">
                    <div class="nav-menu">
                        <h4 class="nav-title">Company</h4>
                        <div class="nav-items">
                            <div class="nav-item">
                                <a href="#" class="nav-link">About Us</a>
                            </div>
                            <div class="nav-item">
                                <a href="#" class="nav-link">Jobs</a>
                            </div>
                            <div class="nav-item">
                                <a href="#" target="_blank" class="nav-link">Branding</a>
                            </div>
                        </div>
                    </div>
                    <div class="nav-menu">
                        <h4 class="nav-title">Resources</h4>
                        <div class="nav-items">
                            <div class="nav-item">
                                <a href="#" target="_blank" class="nav-link">Support</a>
                            </div>
                            <div class="nav-item">
                                <a href="/discord" target="_blank" class="nav-link">Discord</a>
                            </div>
                        </div>
                    </div>
                    <div class="nav-menu">
                        <h4 class="nav-title">Policies</h4>
                        <div class="nav-items">
                            <div class="nav-item">
                                <a href="<%= path === '/terms' ? 'javascript:void(0);' : '/terms' %>" class="nav-link">Terms of Service</a>
                            </div>
                            <div class="nav-item">
                                <a href="<%= path === '/privacy' ? 'javascript:void(0);' : '/privacy' %>" class="nav-link">Privacy Policy</a>
                            </div>
                            <div class="nav-item">
                                <a href="<%= path === '/cookies' ? 'javascript:void(0);' : '/cookies' %>" class="nav-link">Cookie Policy</a>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
            <section class="footer-right footer-socials">
                <a class="nav-link" href="/twitter" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-twitter fa-2x nav-icon"></i>
                </a>
                <a class="nav-link" href="/discord" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-discord fa-2x nav-icon"></i>
